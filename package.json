{
  "name": "rtt-ai-agent",
  "version": "1.0.0",
  "description": "AI Agent for Rally The Troops board games, starting with 300: Earth & Water",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "debug": "node src/index.js --debug",
    "play": "node src/game-runner.js",
    "play-debug": "node src/game-runner.js --debug --verbose",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/integration"
  },
  "keywords": [
    "ai",
    "boardgames",
    "300-earth-and-water",
    "rally-the-troops"
  ],
  "author": "RTT AI Agent",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "jest": "^30.0.5"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testTimeout": 30000,
    "setupFilesAfterEnv": [],
    "verbose": true
  }
}
